
<html>
    <head>
        <title>Libros</title>
    </head>
    <body>
        <table border="1">
            <tr>
                <th>Cod_Libro</th>
                <th>Titulo</th>
                <th>Editorial</th>
                <th>Edicion</th>
                <th>ISBN</th>
                <th>Páginas</th>
            </tr>
            {
                for $libro in /Libros/libro
                where $libro/NumPaginas > 150
                return
                    <tr>
                         <td>{data($libro/Cod_Libro)}</td>
                         <td>{data($libro/Titulo)}</td>
                         <td>{data($libro/Editorial)}</td>
                         <td>{data($libro/Edicion)}</td>
                         <td>{data($libro/ISBN)}</td>
                         <td>{data($libro/NumPaginas)}</td>
                    </tr>
            }
        </table>
    </body>
</html>

